<Window x:Class="Exam_SearchForbiddenWords_Karvatyuk.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_SearchForbiddenWords_Karvatyuk"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <TextBlock x:Name="tbkLog" TextWrapping="Wrap" />
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="5" FontSize="16" Content="Dublicate and Rewrite" Click="DubRewBt_Click"/>
            <Button Grid.Column="2" Margin="5" FontSize="16" Content="Save to file" Click="Click_btSaveToFile"/>
            <Button Grid.Column="3" Margin="5" FontSize="16" Content="Close" Click="Click_btClose"/>
        </Grid>
    </Grid>
</Window>
